#!/bin/bash

# =============================================================================
# PROMPT
# =============================================================================
eval "$(starship init bash)"

# =============================================================================
# PATH
# =============================================================================
export PATH="$PATH:/opt/nvim-linux64/bin"

# =============================================================================
# ALIASES
# =============================================================================
alias vim='nvim'
alias python='python3'
alias repo='cd ~/repos/enricava'

# Share files over http
alias share='ip a && python3 -m http.server'

# =============================================================================
# OTHER
# =============================================================================
# Rust shenanigans
. "$HOME/.cargo/env"

